---
import DebugPanel from "../components/debug-panel.astro";
import DialogueColumn from "../components/dialogue-column.astro";


---

<!doctype html>
<html lang="en">
    <head>
        <title>Cafe Halcyon</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <DialogueColumn/>
        <DebugPanel/>
    </body>
</html>
<style is:global>
    :root {
        color-scheme: light dark;
        --bg-color: light-dark(white, black);
        --text-color: light-dark(black, white);
    }

    html {
        width: 100%;
        height: 100%;
        color: var(--text-color);
        background-color: var(--bg-color);
        font-family: serif;
    }

    html,
    body {
        margin: 0;
    }

    body {
        display: grid;
        grid-template-columns: auto 1fr;
        overflow: hidden;
    }
</style>
